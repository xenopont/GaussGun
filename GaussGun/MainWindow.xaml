<Window x:Class="GaussGun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GaussGun"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox1" VerticalAlignment="Top" HorizontalAlignment="Right"
                 Width="212" Height="360" Margin="8"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Right"
                Margin="0,0,8,8" VerticalAlignment="Bottom" Height="42" Width="212" Click="Button1ClickHandler"/>
    </Grid>
</Window>
